{{#partial "contenido"}}
    <div class="page-title text-center p-5">
        <h1 class="white-text">Entidades Prestadoras y Organismos de Control</h1>
    </div>
    <div class="container text-center">
        <div class = row>
            <div  class="col-md-6 offset-md-3">
                <form method="POST" action="/csv" class="col-12" id="csv-form" enctype="multipart/form-data">
                    <input type="file" id="archivoCSV" name="archivoCSV" accept=".csv" class="form-control mt-3" required>
                    <button  type="submit" id="btnSubirCSV" class="btn btn-primario shadow w-50 mt-4 border-0 fs-4 p-1">Subir CSV</button>
                </form>
                {{#if subido}}
                    <p class="mt-4 mb-2 text-success">¡El archivo se ha subido correctamente!</p>
                {{/if}}
            </div>
        </div>
    <hr>
    </div>
        <div class="container text-center">
            <h3 class="gray-text mb-3 mt-4">Entidades y Organismos del Sistema</h3>
            <div class="row align-items-start">
                <div class="col">
                        <table class="table table-bordered">
                            <thead class="table-success text-center">
                            <tr>
                                <th colspan="2">Entidades Prestadoras</th>
                            </tr>
                            <tr>
                                <th>Nombre</th>
                                <th>Descripción</th>
                            </tr>
                            </thead>
                            <tbody class="text-center">
                            {{#each entidades}}
                                <tr>
                                    <td>{{this.nombre}}</td>
                                    <td>{{this.descripcion}}</td>
                                </tr>
                            {{/each}}
                            <tbody class="text-center">
                    </table>
                 </div>
                <div class="col">
                    <table class="table table-bordered">
                        <thead class="table-success text-center">
                        <tr>
                            <th>Organismos de Control</th>
                        </tr>
                        <tr>
                            <th>Nombre</th>
                        </tr>
                        </thead>
                        <tbody class="text-center">
                        {{#each organismos}}
                            <tr>
                                <td>{{this.nombre}}</td>
                            </tr>
                        {{/each}}
                        <tbody class="text-center">
                    </table>
                </div>
        </div>
    </div>
{{/partial}}
{{> templates/base_admin }}
