{{#partial "contenido"}}
    <div class="page-title text-center p-5">
        <h1 class="white-text">Servicios y Entidades de interes</h1>
    </div>
    <div class="mt-3 ms-5 me-5 text-md-start text-center">
        <h2 class="fw-normal">Servicios de Interes</h2>
        <hr>
        <div class="d-flex align-items-center justify-content-center mt-4 col-12 flex-column">
            <table class="table table-bordered w-75 col-12">
                <thead class="table-success text-center">
                <tr>
                    <th scope="col" class="col-3">Servicio</th>
                    <th scope="col" class="">Descripcion</th>
                    <th scope="col" class="col-3">Establecimiento - Entidad</th>
                </tr>
                </thead>
                <tbody class="text-center">
                {{#each serviciosInteres}}
                    <tr>
                        <th>{{this.nombre}}</th>
                        <td>{{this.descripcion}}</td>
                        <td>{{this.establecimiento.nombre}} - {{this.establecimiento.entidad.nombre}}</td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
            <a href="/interes/agregar_servicio" class="btn btn-primario ms-0 ms-lg-5 fs-5 pt-2 pb-2 pe-5 ps-5">Agregar Servicio</a>
        </div>
    </div>
    <hr>
    <div class="mt-3 ms-5 me-5 text-md-start text-center">
        <h2 class="fw-normal">Entidades de Interes</h2>
        <hr>
        <div class="d-flex align-items-center justify-content-center mt-4 col-12 flex-column">
            <table class="table table-bordered w-75 col-12">
                <thead class="table-success text-center">
                <tr>
                    <th scope="col" class="col-3">Entidad</th>
                    <th scope="col" class="">Descripcion</th>
                    <th scope="col" class="col-3">Organismo de control</th>
                </tr>
                </thead>
                <tbody class="text-center">
                {{#each entidadesInteres}}
                    <tr>
                        <th>{{this.nombre}}</th>
                        <td>{{this.descripcion}}</td>
                        <td>{{this.entidadPropietaria.nombre}}</td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
            <a href="/interes/agregar_entidad" class="btn btn-primario ms-0 ms-lg-5 fs-5 pt-2 pb-2 pe-5 ps-5 mb-4">Agregar Entidad</a>
        </div>
    </div>
{{/partial}}
{{> templates/base }}